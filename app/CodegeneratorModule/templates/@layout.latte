<!DOCTYPE html>
<html lang="cz">
    <head>
        {include '..\..\sharedTemplates\head.latte'}
        <link rel="stylesheet" media="screen" href="{$basePath}/css/homepage/style.css?{filemtime('css/homepage/style.css')}">
        <title>Rories 3.0 | Homepage</title>
    </head>
    <body>
        {snippet flashMessage}
            <div id="infoMessages">
                {foreach $flashes as $flash}<div class="flash {$flash->type}">{$flash->message}</div>{/foreach}
            </div>
            <script>
                $(function () {
                    setTimeout(function () {
                        $("#infoMessages .flash").fadeOut(800, function () {
                            (this).remove();
                        });
                    }, 3000);
                });
            </script>
        {/snippet}


        {ifset $login}
        {include '..\..\sharedTemplates\menu.latte'}
        {/ifset}



        <div class="mainWindow">
            <div id = "contentModal" class="content">
                {block content}
            </div>
        </div>

    </body>

    {include '..\..\sharedTemplates\foot.latte'}


</html>
