{block content}

    {snippet obsah}

        <a class="ajax button newItem" n:href="editTask!, id=>null">New Task</a>

<fieldset class="fieldset">
    <h1>List of Task</h1>


    <table class="tableOne">
        <thead>
        <tr>
            
<th>Actions</th>
<th>eventId</th>
<th>finishDate</th>
<th>taskName</th>
<th>description</th>
<th>createDate</th>
<th>createdByUserId</th>
        </tr>
        </thead>
        <tbody>
        {foreach $list as $item}
            <tr>
                <td><a class="ajax" n:href="editTask!, id=>$item->idTask"><img
                                src="{$basePath}/images/icon/accessories-text-editor.png"/></a>
                    <a class="delete" n:href="deleteTask!, id=>$item->idTask"><img
                                src="{$basePath}/images/icon/edit-clear.png"/></a>
                </td>
                

<td>{$item->eventId}</td>
<td>{$item->finishDate}</td>
<td>{$item->taskName}</td>
<td>{$item->description}</td>
<td>{$item->createDate}</td>
<td>{$item->createdByUserId}</td>
            </tr>
        {/foreach}
        </tbody>
    </table>
    <br/>

</fieldset>
        <script>
            $(function(){
                $(".delete").click(function(){
                    if (!confirm('Opravdu si přejete položku smazat?')) return false;
                });
            });
        </script>

{/snippet}

{snippet editTask}
    {ifset $editTask}
        <div id="editTask" class="modalDisable">
            {form taskForm}

                <!-- Jednoduché vykreslení chyb -->
                <ul class="errors" n:if="$form->hasErrors()">
                    <li n:foreach="$form->errors as $error">{$error}</li>
                </ul>

                <fieldset class="edit" style="width:100%; text-align:left; padding:0px 10px; margin:0px;">

                    <table class="tableTwo">
                        

<tr><td class="required">{label eventId /}{input eventId}</td></tr>
<tr><td class="required">{label finishDate /}{input finishDate}</td></tr>
<tr><td class="required">{label taskName /}{input taskName}</td></tr>
<tr><td class="required">{label description /}{input description}</td></tr>
<tr><td class="required">{label createDate /}{input createDate}</td></tr>
<tr><td class="required">{label createdByUserId /}{input createdByUserId}</td></tr>
                    </table>
                </fieldset>

                <fieldset class="edit" style="width:100%; text-align:right; padding:0px 10px; margin-top:10px;">
                    {input send}
                </fieldset>


            {/form}

            {*{control taskForm}*}


        </div>
        <script>
            $(function () {
                var last;
                var dialogOptions = {
                    "title": "Detail položky",
                    "width": 500,
                    "height": 450,
                    "minWidth": 500,
                    "minHeight": 450,
                    "modal": false,
                    "resizable": true,
                    "draggable": true,
                    "cancel": false,
                    "position": {"my": "center top", "at": "center bottom", "of": "button"},
                    "close": function () {
                        if (last != this) {
                            $(last).dialog("destroy").remove();
                        }
                    }
                };
                var dialogExtendOptions = {
                    "closable": true,
                    "maximizable": false,
                    "minimizable": false,
                    "minimizeLocation": "left",
                    "collapsable": false,
                    "dblclick": "maximize",
                    "titlebar": false
                };
                last = $("#editTask").dialog(dialogOptions).dialogExtend(dialogExtendOptions);
                maxwidth = $('html').css('max-width');

                if (maxwidth == '1200px') {
                    last.dialogExtend('maximize');
                }

                $("select").chosen();
                $('span.ui-dialog-title').each(function () {
                    var $p = $(this);
                    $p.html($p.html().replace(/^(\w+)/, '<strong>$1</strong>'));
                });



            });
        </script>
    {/ifset}
{/snippet}